@model UserDto
@{
    var x = @Html.EasyUi();
}
@section top {
    @*工具栏*@
    <div class="toolbar">
        @x.Button( "添加用户" ).Icon( "icon-add" ).ToolTip( R.RememberSave ).Plain().AddByGrid()
        @x.Button( "编辑用户" ).Icon( "icon-edit" ).ToolTip( R.RememberSave ).Plain().EditByGrid()
        @x.Button( "取消编辑" ).Icon( "icon-cancel2" ).Plain().CancelByGrid()
        @x.Button( "删除用户" ).Icon( "icon-delete" ).ToolTip( R.RememberSave ).Plain().DeleteByGrid()
        @x.Button( "保 存" ).Icon( "icon-save" ).Plain().SaveByGrid( "/systems/user/save" )
        @x.Button( "刷 新" ).Icon( "icon-refresh" ).Plain().Refresh()
        @x.DialogButton("角色设置", "/systems/User/editRoles").Icon("icon-edit2").Plain().ShowEditDialog()
    </div>
}
@section content {
    @*右键菜单*@
    @Html.Partial( "Menus/GridMenu" )
    @*查询表单*@
    @Html.Partial( "Parts/QueryForm" )
    @*表格*@
    @(x.Grid( "grid" ).Sort( "CreateTime" ).Toolbar( "divQuery" ).Url( "/systems/user/query" )
        .Menu().Fit()
        .Columns(
            x.GridColumn( t => t.Id ).CheckBox(),
            x.GridColumn( t => t.UserName,100,true ),
            x.GridColumn( t => t.Password,100,true ),
            x.GridColumn( t => t.SafePassword,100,true ),
            x.GridColumn( t => t.Email,100,true ),
            x.GridColumn( t => t.MobilePhone,100,true ),
            x.GridColumn( t => t.Question,100,true ),
            x.GridColumn( t => t.Answer,100,true ),
            x.GridColumn( t => t.IsLock,60,true ),
            x.GridColumn( t => t.LockBeginTime,120,true ),
            x.GridColumn( t => t.LockTime,100,true ),
            x.GridColumn( t => t.LockMessage,100,true ),
            x.GridColumn( t => t.LastLoginTime,120,true ),
            x.GridColumn( t => t.LastLoginIp,100,true ),
            x.GridColumn( t => t.CurrentLoginTime,120,true ),
            x.GridColumn( t => t.CurrentLoginIp,100,true ),
            x.GridColumn( t => t.LoginTimes,100,true ),
            x.GridColumn( t => t.LoginFailTimes,100,true ),
            x.GridColumn( t => t.Note,100,true ),
            x.GridColumn( t => t.Enabled,60,true ),
            x.GridColumn( t => t.DisableTime,120,true ),
            x.GridColumn( t => t.CreateTime,120,true ),
            x.GridColumn( t => t.RegisterIp,100,true )
        )
    )
}