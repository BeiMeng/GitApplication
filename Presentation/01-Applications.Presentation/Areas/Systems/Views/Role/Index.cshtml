@model RoleDto
@{
    var x = @Html.EasyUi();
}
@section top {
    @*工具栏*@
    <div class="toolbar">
        @x.Button( "添加角色" ).Icon( "icon-add" ).ToolTip( R.RememberSave ).Plain().AddByGrid()
        @x.Button( "编辑角色" ).Icon( "icon-edit" ).ToolTip( R.RememberSave ).Plain().EditByGrid()
        @x.Button( "取消编辑" ).Icon( "icon-cancel2" ).Plain().CancelByGrid()
        @x.Button( "删除角色" ).Icon( "icon-delete" ).ToolTip( R.RememberSave ).Plain().DeleteByGrid()
        @x.Button( "保 存" ).Icon( "icon-save" ).Plain().SaveByGrid( "/systems/role/save" )
        @x.Button( "刷 新" ).Icon( "icon-refresh" ).Plain().Refresh()
    </div>
}
@section content {
    @*右键菜单*@
    @Html.Partial( "Menus/GridMenu" )
    @*查询表单*@
    @Html.Partial( "Parts/QueryForm" )
    @*表格*@
    @(x.Grid( "grid" ).Sort( "CreateTime" ).Toolbar( "divQuery" ).Url( "/systems/role/query" )
        .Menu().Fit()
        .Columns(
            x.GridColumn( t => t.Id ).CheckBox(),
            x.GridColumn( t => t.Code,100,true ),
            x.GridColumn( t => t.Name,100,true ),
            x.GridColumn( t => t.Type,100,true ),
            x.GridColumn( t => t.TypeName,100,true ),
            x.GridColumn( t => t.IsAdmin,60,true ),
            x.GridColumn( t => t.Note,100,true ),
            x.GridColumn( t => t.PinYin,100,true ),
            x.GridColumn( t => t.Enabled,60,true ),
            x.GridColumn( t => t.CreateTime,120,true ),
            x.GridColumn( t => t.Sign,100,true )
        )
    )
}